<div class="nested-fields">
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
    <%= image_tag(@tour.photo1_url , :width => 200 , :height => 150) if @tour.photo1? %>
    <%= f.file_field :photo1 %>
      </div>
      <div class="col-xs-4">
        <%= image_tag(@tour.photo2_url , :width => 200 , :height => 150) if @tour.photo1? %>
        <%= f.file_field :photo2 %>
      </div>
      <div class="col-xs-4">
        <%= image_tag(@tour.photo3_url , :width => 200 , :height => 150) if @tour.photo1? %>
        <%= f.file_field :photo3 %>
      </div>
    </div>
  </div>
  <%= link_to_remove_association "remove tour", f %>
</div>